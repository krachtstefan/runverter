{{#if visible}}
  <form class="uk-form uk-container-center">
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
        {{t "tools.pca.distanceLabel"}}
      </div>
      <div class="uk-width-1-1 suggest-select-container {{expertModeClass}} {{racePickerVisibleClass}}">
        {{#if showRunLengthKm}}<span>{{form-helper/number-input value=run.lengthKmStackKm maxLength="3" focus=racePickerVisible title=tooltipLengthKm}} {{t "metrics.distance.separator"}} {{form-helper/number-input value=run.lengthKmStackDecimalFixed addLeadingZeros=true focus=racePickerVisible title=tooltipLengthKm}}</span>{{/if}}
        {{#if showRunLengthMi}}<span>{{form-helper/number-input value=run.lengthMiStackMi maxLength="3" focus=racePickerVisible title=tooltipLengthMi}} {{t "metrics.distance.separator"}} {{form-helper/number-input value=run.lengthMiStackDecimalFixed addLeadingZeros=true focus=racePickerVisible title=tooltipLengthMi}}</span>{{/if}}
        {{#x-select value=runLengthMetricsSelected class="runLength"}}
          {{#each runLengthMetrics as |item|}}
            {{#x-option value=item.key}}{{item.label}}{{/x-option}}
          {{/each}}
        {{/x-select}}
        {{form-helper/suggest-select items=races.templates identifier="race-picker-pace-calc" action="setRace" label=(t "races.label")}}
      </div>
    </div>
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
        {{t "tools.pca.timeLabel"}}
      </div>
      <div class="uk-width-1-1 suggest-select-container {{expertModeClass}} {{timePickerVisibleClass}}">
        {{form-helper/number-input value=run.timeStackHr minLength="1" focus=timePickerVisible title=tooltipTimeHr}} {{t "metrics.time.hr"}} {{form-helper/number-input value=run.timeStackMinFixed focus=timePickerVisible title=tooltipTimeMin}} {{t "metrics.time.min"}} {{form-helper/number-input value=run.timeStackSecFixed focus=timePickerVisible title=tooltipTimeSec}} {{t "metrics.time.sec"}}
        {{form-helper/suggest-select items=targetTimesSuggestions identifier="target-time-pace-calc" action="setTargetTime" label=(t "targetTimes.label")}}
      </div>
    </div>
    <div class="uk-grid uk-grid-collapse tool-line">
      <div class="uk-width-1-1 uk-width-medium-2-6 uk-width-large-2-5 tool-label">
        {{t "tools.pca.paceLabel"}}
      </div>
      <div class="uk-width-1-1 {{expertModeClass}}">
        {{#if showRunTempoMinKm}}{{form-helper/number-input value=run.paceMinPerKmStackMin title=tooltipPaceMinPerKm}} {{t "metrics.tempo.separator"}} {{form-helper/number-input value=run.paceMinPerKmStackSecFixed title=tooltipPaceMinPerKm}}{{/if}}
        {{#if showRunTempoMinMi}}{{form-helper/number-input value=run.paceMinPerMiStackMin title=tooltipPaceMinPerMi}} {{t "metrics.tempo.separator"}} {{form-helper/number-input value=run.paceMinPerMiStackSecFixed title=tooltipPaceMinPerMi}}{{/if}}
        {{#if showRunTempoKmH}}{{form-helper/number-input value=run.speedKmHrStackKm title=tooltipSpeedKmHr}} {{t "metrics.distance.separator"}} {{form-helper/number-input value=run.speedKmHrStackDecimalFixed addLeadingZeros=true title=tooltipSpeedKmHr}}{{/if}}
        {{#if showRunTempoMiH}}{{form-helper/number-input value=run.speedMiHrStackMi minLength="1" title=tooltipSpeedMiHr}} {{t "metrics.distance.separator"}} {{form-helper/number-input value=run.speedMiHrStackDecimalFixed addLeadingZeros=true title=tooltipSpeedMiHr}}{{/if}}
        {{#x-select value=runTempoMetricsSelected class="runTempo"}}
          {{#each runTempoMetrics as |item|}}
            {{#x-option value=item.key}}{{item.label}}{{/x-option}}
          {{/each}}
        {{/x-select}}
      </div>
    </div>
  </form>
{{/if}}
